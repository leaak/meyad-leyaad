@model MeyadLeyaad1.Models.Donor
@{
    ViewBag.Title = "SearchDonor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">

    <div class="row">
        <!-- page header -->
        <div class="col-lg-12">
            <h1 class="page-header">חיפוש תורם</h1>
        </div>
        <!--end page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    חיפוש תורם
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group" style="width:100%; display:block">
                                    <label>מייל של התורם</label>
                                    <br />
                                    @Html.TextBoxFor(model => model.Email)
                                </div>

                                <div class="form-group" style="width:100%; display:block">
                                    <label>שם פרטי</label>
                                    <br />
                                    @Html.TextBoxFor(model => model.First_Name)
                                </div>

                                <div class="form-group" style="width:100%; display:block">
                                    <label>שם משפחה</label>
                                    <br />
                                    @Html.TextBoxFor(model => model.Last_Name)
                                </div>

                                <div class="form-group" style="width:100%; display:block">
                                    <label>עיר</label>
                                    <br />
                                    @Html.TextBoxFor(model => model.City)
                                </div>

                                <br />
                              
                                <br />
                              
                                   <table class="table-gray" style="/*display:none ;*/ width:100%" id="donationsList">
                                              <tr>
                                              <th>שם פרטי</th>
                                              <th>שם משפחה</th>
                                              <th>עיר</th>
                                              <th>דוא"ל</th>
                                              
                                    </tr>
                                    @foreach (var item in ViewBag.list)
                                    {
                                        <tr>
                                            <td>@item.First_Name</td>
                                            <td>@item.Last_Name</td>
                                            <td>@item.City</td>
                                            <td>@item.Email</td>
                                            <td><a href="@Url.Action("EditProfile", "CreateEditProfile", new { id = @item.Id_Donor })"> לפרטים ועריכה</a></td>
                                            <td><a href="@Url.Action("DonationsOfDonor", "DonationsOfDonor" , new {email = @item.Email})"> לצפיה בתרומות</a></td>



                                        </tr>
                                    }
                                </table>

                                <button type="submit" class="btn btn-primary" style="float: right; display: block">חפש</button>
                                <button type="reset" class="btn btn-success" style="float:right; display:block">אפס שדות</button>

                            </form>
                        </div>


                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
    
    
    
    <!--End Pill Tabs   -->
</div>

<script>

    $(document).ready(function () {
        var list = "@ViewBag.list";
          if (list.Count() > 0) {
              $("#donationsList").show();
          }


      });

</script>

